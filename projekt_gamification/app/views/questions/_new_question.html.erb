<% if !@q.blank? %>
	<div class="pitanje"><%= @q.question_text %></div>
	<ol>
		<% @answers = Answer.where(:question_id => @q.id) %>
		<% @answers.each do |a| %>
			<li class="odgovor">
				<button class="answers btn btn-default btn-s" data-id="<%= a.id %>"><%= a.ans %></button>
			</li>
		<% end %>
	</ol>
<% else %>
	<h1>nema pitanja</h1>		
<% end %>