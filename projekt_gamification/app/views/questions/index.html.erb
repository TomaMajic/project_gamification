<%@page_title = "Level"%>

<% if false %>
	<div>
		<% @questions.each do |q| %>
			<% @answers = Answer.where(:question_id => q.id) %>
			<div>
				<p><%= h q.question_text %></p>
				<ol>
					<% @answers.each do |a| %>
						<li><button><%= a.ans %></button></li>
					<% end %>
				</ol>
			</div>
		<% end %>
	</div>
<% end %>
<div class="question" data-level-id="<%= params[:id] %>">
	<% if !@q.blank? %>
		<p><%= @q.question_text %></p>
		<ol>
			<% @answers = Answer.where(:question_id => @q.id) %>
			<% @answers.each do |a| %>
				<li>
					<button class="answers" data-id="<%= a.id %>"><%= a.ans %></button>
				</li>
			<% end %>
		</ol>
	<% else %>
		<h1>nema vise pitanja</h1>
		
	<% end %>
</div>
<% if !@q.blank? %>
	<%= link_to "nazad na biranje levela", levels_index_path(:concept_id => @q.level.concept_id)  %>	
<% end %>
