

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
  <div class="text-center">
    <h2>Prijava</h2>
    <br />
    <div>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, :class => "form-group form-control" %>
    </div>

    <div>
      <%= f.label :lozinka %><br />
      <%= f.password_field :password, autocomplete: "off", :class => "form-group form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :zapamti_me, :class => "form-group" %>
      </div>
    <% end -%>

    <div>
      <%= f.submit "Prijava", :class => "btn btn-default" %>
    </div>
    <%= render "users/shared/links" %>
  </div>
<% end %>


