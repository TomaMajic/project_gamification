<!DOCTYPE html>
<html>
	<head>
		<title><%= @page_title%></title>
		<%= stylesheet_link_tag('application', :media => 'all') %>
		<%= javascript_include_tag :defaults %>
	</head>
	<body>
		<div id="header">
			<h1>Game Name</h1>
			<% if user_signed_in? %>
				<div>
					<button id="logoutbtn"><%= link_to("Logout", destroy_user_session_path, :method => :delete) %></button>
				</div>
			<% end %>
		</div>
		<div id="main">
			<div id="content">
				<%= yield %>
			</div>
		</div>	
		<div id="footer">
			<p id="copyright">&copy; FER</p>
		</div>
	</body>
</html>